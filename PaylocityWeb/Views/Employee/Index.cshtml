@using Models
@model List<Employee>

<div class="col-md-12">
    <div class="panel">
        <div class="panel-heading">
            <strong class="panel-title">
                Current Employees<br />
                <i class="fa fa-plus-circle"></i> @Html.ActionLink("Add Employee", "_AddEmployee", "Employee", null, new { @class = "action-link-modal" })
            </strong>
        </div>
        <div class="panel-body">
            <table cellpadding="3" border="1">
                <tr><th>First Name</th><th>Last Name</th><th>details</th></tr>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="3">No employees found</td></tr>
                }
                else
                {
                    foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td class="text-center"><i class="fa fa-info-circle fa-lg" id="@emp.EmployeeId"></i></td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

<div id="empDetails" title="Employee Details"></div>
<div id="addEmp" title="Add Employee"></div>
<div id="errorMsgDetails" class="hidden"><strong>There was an error retrieving the Employee's details</strong></div>